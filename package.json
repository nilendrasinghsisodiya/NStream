{
  "name": "videotube",
  "version": "1.0.0",
  "description": "a simple video streaming platform",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "dotenvx run -f .env.test -- vitest --reporter=verbose --config='vitest.unit.config.js' run && vitest --reporter=verbose --config='vitest.integration.config.js' run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "test:integration": "dotenvx run -f .env.test -- vitest  --reporter=verbose --config='vitest.integration.config.js' run",
    "test:unit": "vitest --reporter=verbose --config='vitest.unit.config.js' run ",
    "dev": "dotenvx run -f .env.dev -- nodemon src/index.js",
  "start": "dotenvx run -f .env -- node src/index.js"
	},
  "keywords": [
    "javascript",
    "backend",
    "chaiaurcode"
  ],
  "author": "nilendraSingh",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testcontainers/mongodb": "^11.10.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.5",
    "cloudinary": "^2.5.1",
    "cookie": "^1.0.1",
    "cookie-parser": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.2",
    "mongoose-aggregate-paginate-v2": "^1.1.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6"
  }
}
